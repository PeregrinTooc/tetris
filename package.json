{
  "name": "tetris-game",
  "version": "1.0.0",
  "description": "A Tetris-like game that runs in the browser.",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "test": "jest --maxWorkers=100% --silent && cypress run --quiet",
    "test:parallel": "jest --maxWorkers=100% --silent && npm run test:e2e:groups",
    "test:unit": "jest --maxWorkers=100% --silent",
    "test:unit:output": "jest --maxWorkers=100% --verbose > test-output.txt 2>&1",
    "test:watch": "jest --watch --maxWorkers=50%",
    "test:e2e": "cypress run --quiet",
    "test:e2e:fast": "cypress run --quiet --headless --browser electron",
    "test:e2e:ci": "cypress run --quiet --parallel --record --key=fddc7d69-cb6d-40c0-ae33-d332d294cc19",
    "test:e2e:groups": "./scripts/cypress-parallel.sh",
    "test:ci": "jest --maxWorkers=100% --silent && cypress run --quiet --parallel --record --key=fddc7d69-cb6d-40c0-ae33-d332d294cc19",
    "deploy": "gh-pages -d dist",
    "prepare": "husky"
  },
  "keywords": [
    "tetris",
    "game",
    "javascript",
    "browser"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cypress": "^14.5.4",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "typescript": "^5.8.3"
  }
}
